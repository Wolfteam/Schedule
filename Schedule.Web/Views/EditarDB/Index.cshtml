@{ ViewData["Title"] = "Editar Bases de datos"; }

<div class="container">
    <div class="row" id="barra-progeso" style="display:none">
        <div class="col s12">
            <div class="progress">
                <div class="indeterminate"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <div class="section">
                <h5>Seleccione una opcion para comenzar</h5>
            </div>
            <div class="input-field col s4">
                <select id="select_editarDB">
                    <option value="-1" disabled selected>Seleccione...</option>
                    <option value="1">Aulas</option>
                    <option value="3">Materias</option>
                    <option value="4">Profesores</option>
                    <option value="5">Profesor por materia</option>
                    <option value="6">Secciones</option>
                </select>
                <label>Seleccione...</label>
            </div>
            <div class="col s1">
                <a id="btn_buscar" class="btn-floating btn-large waves-effect waves-light red pulse"><i class="material-icons">search</i></a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12" id="tabla">
        </div>
    </div>
    <div class="fixed-action-btn vertical" id="btn-flotante" style="display:none">
        <a class="btn-floating btn-large purple darken-4">
            <i class="large material-icons">menu</i>
        </a>
        <ul>
            <li><a id="btn-crear" class="btn-floating light-blue"><i class="material-icons">add</i></a></li>
            <li><a id="btn-editar" class="btn-floating yellow darken-1"><i class="material-icons">mode_edit</i></a></li>
            <li><a id="btn-borrar" class="btn-floating red"><i class="material-icons">delete</i></a></li>
        </ul>
    </div>
</div>

@section Scripts{
    <script src="~/js/EditarDB/editarDB.js"></script>
    <script src="~/js/EditarDB/aulas.js"></script>
    <script src="~/js/EditarDB/materias.js"></script>
    <script src="~/js/EditarDB/prioridades.js"></script>
    <script src="~/js/EditarDB/profesores.js"></script>
    <script src="~/js/EditarDB/profesoresXMaterias.js"></script>
    <script src="~/js/EditarDB/secciones.js"></script>
    <script src="~/js/EditarDB/semestres.js"></script>
    <script src="~/js/EditarDB/carreras.js"></script>
}