@model List<Schedule.Entities.ProfesorDetailsDTO>
@{
    ViewData["Title"] = "Cargar Disponibilidad";
}

<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="section">
                <h5>Cargar Disponibilidad</h5>
                <div class="divider"></div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="input-field col s5">
            <i class="material-icons prefix">check</i>   
            <select id="select_profesor">
                <option value="-1" disabled selected>Seleccione...</option>
            @foreach (var item in Model)
            {
                <option value="@item.Cedula">@item.Nombre @item.Apellido</option>        
            }
            </select>
        </div>
        <div class="input-field col s3 right">
            <i class="material-icons prefix">hourglass_full</i>   
            <label for="horas_a_cumplir">Horas a cumplir</label>    
            <input type="number" id="horas_a_cumplir" maxlength="2" value="0" disabled>
        </div>
    
        <div class="input-field col s3 right">
            <i class="material-icons prefix">hourglass_empty</i>
            <label for="horas_a_cumplir">Horas restantes</label>
            <input type="text" id="horas_restantes" maxlength="2" value="0" disabled>
        </div>      
    </div>
</div>

@section Scripts{
    <environment names="Development">
        <script src="~/js/CargarDisponibilidad/cargarDisponibilidad.js"></script>
    </environment>
  
    <environment names="Staging,Production">
        <script src="~/js/CargarDisponibilidad/cargarDisponibilidad.min.js"></script>
    </environment>
}

@section Styles{
    <environment names="Development">
        <link href="~/css/cargarDisponibilidad.css" rel="stylesheet" />
    </environment>
  
    <environment names="Staging,Production">
       <link href="~/css/cargarDisponibilidad.min.css" rel="stylesheet" />
    </environment>
}