@model Schedule.Web.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <partial name="_ProgressBar" />
    <div class="row">
        <div class="col s12">
            <div class="section">
                <h4>Bienvenido <small>@Model.Username</small></h4>
                <div class="divider"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m7">
            <div class="card grey darken-4">
                <div class="card-content white-text">
                    <span class="card-title">Descargas</span>
                    <p>Aqui encontrara los links a las planificaciones del semestre actual.</p>
                </div>
                <div class="card-action">
                    <div class="row">
                        <div class="col s12 l4 center-align">
                            <a href="@Model.UrlPlanificacionAcademica">Planificacion Academica</a>
                        </div>
                        <div class="col s12 l4 center-align">
                            <a href="@Model.UrlPlanificacionAulas">Planificacion Aulas</a>
                        </div>
                        <div class="col s12 l4 center-align">
                            <a href="@Model.UrlPlanificacionHorarios">Planificacion Horario</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s12 m5">
            <div class="card grey darken-4">
                <div class="card-content white-text">
                    <span class="card-title">Periodo Academico</span>
                    <p>Actualmente el periodo academico es:</p>
                    <h5 id="periodo" style="text-align:center" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <environment names="Development">
        <script src="~/js/Home/home.js"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/js/Home/home.min.js"></script>
    </environment>
}
