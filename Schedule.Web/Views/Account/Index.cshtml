@model Schedule.Web.ViewModels.LoginViewModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html>

<head>
    <title>Login</title>
    <link rel="icon" href="favicon.ico" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/lib/materialize/css/materialize.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet" />

</head>

<body>

    <header>
        <nav class="grey darken-4" role="navigation">
            <div class="nav-wrapper container">
                <a href="#!" class="brand-logo">Horarios<i class="fa fa-list-alt" aria-hidden="true"></i></a>
            </div>
        </nav>
    </header>

    <main>
        <div class="container">
            <h2>Iniciar Sesion</h2>
            <div class="row">
                <div clas="col s12 ">
                    <form id="formLogin" class="login" method="post" asp-controller="Account" asp-action="Login">
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="fa fa-user prefix"></i>
                                <input asp-for="Username" id="username" name="username" type="text" class="validate" data-length="10" placeholder="Username">
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="fa fa-lock prefix"></i>
                                <input asp-for="Password" id="password" name="password" type="password" class="validate" data-length="10" placeholder="******">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12 center">
                                <button class="btn green waves-effect waves-light" type="submit" name="action">
                                    Iniciar Sesion
                                    <i class="fa fa-sign-in right"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            @* Si existe algun error en el modelo se genera esto *@
            @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
            {
                @foreach (var modelError in Html.ViewData.ModelState.SelectMany(keyValuePair => keyValuePair.Value.Errors))
                {
                    <input type="hidden" class="error" value="@modelError.ErrorMessage" />               
                }
            }
        </div>
    </main>

    <footer class="page-footer grey darken-4">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">© Copyright 2017</h5>
                    <p class="grey-text text-lighten-4">Wolfteam20. All rights reserved.</p>
                </div>
                <div class="col l4 offset-l2 s12">
                    <h5 class="white-text"><a class="grey-text text-lighten-3" href="https://github.com/Wolfteam">GitHub<i class="fa fa-github" aria-hidden="true"></i></a></h5>
                </div>
            </div>
        </div>
    </footer>

    <!-- ======================== Javascript ======================== -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/materialize/js/materialize.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/utilidades.js"></script>
    <script src="~/js/login.js"></script>
</body>

</html>